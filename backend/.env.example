# Server Configuration
PORT=3001
CORS_ORIGIN=http://localhost:3000

# Debug Mode
# Set to true to enable console logging and session log files
# Set to false or remove to disable ALL logging (production mode)
DEBUG=true

# AWS Configuration (for Transcribe + Bedrock)
AWS_REGION=ap-northeast-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# AWS Transcribe STS Configuration (Optional - for enhanced security)
# If set, backend will use AssumeRole to generate temporary credentials
# If not set, backend will use GetSessionToken with the credentials above
# AWS_TRANSCRIBE_ROLE_ARN=arn:aws:iam::123456789012:role/RabbitTranscribeRole

# LLM Provider Configuration
# Options: "anthropic" (direct API) or "bedrock" (AWS Bedrock)
LLM_PROVIDER=anthropic

# Anthropic Claude API (when LLM_PROVIDER=anthropic)
ANTHROPIC_API_KEY=your_anthropic_api_key
ANTHROPIC_MODEL=claude-3-5-haiku-20241022

# AWS Bedrock Configuration (when LLM_PROVIDER=bedrock)
# Uses AWS credentials above
AWS_BEDROCK_REGION=ap-northeast-1
AWS_BEDROCK_MODEL_ID=anthropic.claude-haiku-4-5-20251001-v1:0

# Azure Speech Services
AZURE_SPEECH_KEY=your_azure_speech_key
AZURE_SPEECH_REGION=japaneast

# Optional: Override default voices
# AZURE_VOICE_FEMALE=ja-JP-NanamiNeural
# AZURE_VOICE_MALE=ja-JP-KeitaNeural

# Optional: TTS Enhancement Controls (for A/B testing naturalness)
# AZURE_ENABLE_PROSODY=true          # false = disable breaks/prosody adjustments
# AZURE_MINIMAL_SSML=false           # true = use only basic SSML (plain text baseline)
# Optional: Override default voices
# AZURE_VOICE_FEMALE=ja-JP-NanamiNeural
# AZURE_VOICE_MALE=ja-JP-KeitaNeural

# TTS Enhancement Flags (for A/B testing naturalness)
# AZURE_ENABLE_PROSODY=true        # Enable sentence-level breaks (default: true)
# AZURE_MINIMAL_SSML=false         # Use minimal SSML (plain text only, default: false)

# PostgreSQL Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=rabbit_movies
DB_USER=postgres
DB_PASSWORD=postgres
